module terms/Constants

  sorts Int Real String StrChar

  lexical syntax

    Int     = [\-]? [0-9]+
    Real    = [\-]? [0-9]+ [\.] [0-9]+
    String  = "\"" StrChar* "\""
    StrChar = ~[\"\\]
    StrChar =[\\] [\"tnr\\]
    
  sorts Char CharChar

  lexical syntax
    
    Char     = "'" CharChar "'"
    CharChar = ~[\']
    CharChar = [\\] [\'ntr\ ]
    
    Id       = Char {reject}
